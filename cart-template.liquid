<div class="cart__qty">
<!--                   <label for="updates_{{ item.key }}" class="cart__qty-label">{{ 'cart.label.quantity' | t }}</label> -->

<!-- HERE item.key is different for different products added in CART. So, added "plus"/"minus" to differentiate between "+" and "-" button. and add id in ONCLICK-->
                 
                                    <span id="minusupdates_{{ item.key }}" style="font-size: 23px; cursor: pointer; margin-left: 25px;" onclick="minusquantity(this.id)">-</span>
                
  <input class="cart__qty-input" type="number" name="updates[]" id="updates_{{ item.key }}" value="{{ item.quantity }}" min="0" pattern="[0-9]*">
  
  
               <span id="plusupdates_{{ item.key }}" style="font-size: 23px; cursor: pointer; "  onclick="plusquantity(this.id)" >+</span>
                </div>

<script>
function plusquantity(clicked_id) {
  
  <!-- Remove plus in click_id to get input value-->

 var clicked_id = clicked_id.replace('plus','');

var number = parseInt(document.getElementById(clicked_id).value);
  number=number+1;
document.getElementById(clicked_id).value=number;

}
    
    function  minusquantity(clicked_id) {
  <!-- Remove minus in click_id to get input value-->

       var clicked_id = clicked_id.replace('minus','');
      
var number = parseInt(document.getElementById(clicked_id).value);
  number=number-1;
document.getElementById(clicked_id).value=number;

}
</script>
